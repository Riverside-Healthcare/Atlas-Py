{
  "name": "atlas_bi_library",
  "description": "Atlas BI Library",
  "homepage": "https://demo.atlas.bi",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "github:atlas-bi/atlas-bi-library-py"
  },
  "private": true,
  "scripts": {
    "start": "cd atlas; poetry run python manage.py runserver",
    "start:celery": "cd atlas; DJANGO_SETTINGS_MODULE='atlas.settings.dev' poetry run celery -A atlas worker -l DEBUG",
    "start:beat": "cd atlas; DJANGO_SETTINGS_MODULE='atlas.settings.dev' poetry run celery -A atlas beat -l DEBUG --scheduler django_celery_beat.schedulers:DatabaseScheduler",
    "build": "gulp build",
    "watch": "gulp watch",
    "commit": "git add . && pre-commit run ;  npm run pre-commit && git add . && cz --no-verify",
    "format": "prettier --config .prettierrc \"**/*.{ts,css,less,scss,js,json,md,yaml}\" --write",
    "test": "npm run test:eslint; npm run test:prettier",
    "test:eslint": "eslint \"./atlas/**/*.js\" --color",
    "pre-commit": "lint-staged",
    "test:prettier": "prettier --check --config .prettierrc \"**/*.{ts,css,less,scss,js,json,md,yaml}\""
  },
  "dependencies": {
    "@babel/cli": "7.18.10",
    "@babel/core": "7.18.13",
    "@babel/preset-env": "7.18.10",
    "@fortawesome/fontawesome-free": "6.1.2",
    "bulma": "0.9.4",
    "fontawesome-subset": "4.2.0",
    "gulp": "4.0.2",
    "handlebars": "4.7.7"
  },
  "devDependencies": {
    "@creativebulma/bulma-badge": "github:christopherpickering/bulma-badge#patch-1",
    "@creativebulma/bulma-tooltip": "1.2.0",
    "@csstools/postcss-sass": "github:sinankeskin/postcss-sass",
    "@fontsource/inter": "4.5.11",
    "@fontsource/rasa": "4.5.11",
    "@fontsource/source-code-pro": "^4.5.10",
    "@fullhuman/postcss-purgecss": "5.0.0",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "14.0.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.5",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@swc/core": "^1.2.242",
    "@toycode/markdown-it-class": "^1.2.4",
    "autoprefixer": "10.4.7",
    "bulma-checkradio": "^2.1.3",
    "bulma-steps-component": "github:atlas-bi/bulma-steps",
    "bulma-switch": "github:christopherpickering/bulma-switch#patch-1",
    "chart.js": "^2.9.4",
    "cssnano": "5.1.12",
    "cz-conventional-changelog": "^3.3.0",
    "date-fns": "^2.29.1",
    "del": "7.0.0",
    "dompurify": "^2.3.10",
    "focus-within": "^3.0.2",
    "fonteditor-core": "^2.1.8",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-cssnano": "^2.1.3",
    "gulp-postcss": "^9.0.1",
    "gulp-purgecss": "^4.1.3",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "1.1.3",
    "gulp-sass": "^5.1.0",
    "gulp-swc": "^1.2.3",
    "gulp-uglify": "^3.0.2",
    "jsnlog": "^2.30.0",
    "lint-staged": "^13.0.3",
    "markdown-it": "^13.0.1",
    "open": "^8.4.0",
    "postcss": "^8.4.16",
    "postcss-cli": "^10.0.0",
    "postcss-sort-media-queries": "4.2.1",
    "rollup-plugin-swc": "^0.2.1",
    "rollup-stream-gulp": "^0.0.3",
    "sass": "^1.54.5",
    "semantic-release": "^19.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,css,less,scss,js,json,md,yaml}": "npm run format"
  }
}
