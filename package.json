{
  "name": "atlas_bi_library",
  "description": "Atlas BI Library",
  "homepage": "https://demo.atlas.bi",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "github:atlas-bi/atlas-bi-library-py"
  },
  "private": true,
  "scripts": {
    "install": "gulp build",
    "build": "gulp build",
    "watch": "gulp watch",
    "commit": "git add . && pre-commit run &&  npm run pre-commit && git add . && cz --no-verify",
    "format": "prettier --config .prettierrc \"**/*.{ts,css,less,scss,js,json,md,yaml}\" --write",
    "test": "npm run test:eslint; npm run test:prettier",
    "test:eslint": "eslint \"./atlas/**/*.js\" --color",
    "pre-commit": "lint-staged",
    "test:prettier": "prettier --check --config .prettierrc \"**/*.{ts,css,less,scss,js,json,md,yaml}\""
  },
  "browserslist": [
    "Firefox ESR",
    "ie 11",
    "last 2 Chrome versions",
    "last 2 ChromeAndroid versions",
    "last 2 Edge versions",
    "last 1 Firefox version",
    "last 2 iOS versions",
    "last 2 Safari versions"
  ],
  "dependencies": {
    "@babel/cli": "7.18.9",
    "@babel/core": "7.18.9",
    "@babel/preset-env": "7.18.9",
    "@fortawesome/fontawesome-free": "5.15.4",
    "bulma": "0.9.4",
    "fontawesome-subset": "4.1.0",
    "gulp": "4.0.2",
    "handlebars": "4.7.7"
  },
  "devDependencies": {
    "@creativebulma/bulma-badge": "github:christopherpickering/bulma-badge#patch-1",
    "@creativebulma/bulma-tooltip": "1.2.0",
    "@csstools/postcss-sass": "github:sinankeskin/postcss-sass",
    "@fontsource/inter": "4.5.11",
    "@fontsource/rasa": "4.5.11",
    "@fullhuman/postcss-purgecss": "4.1.3",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.5",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "autoprefixer": "10.4.7",
    "bulma-switch": "github:christopherpickering/bulma-switch#patch-1",
    "cssnano": "5.1.12",
    "cz-conventional-changelog": "^3.3.0",
    "del": "7.0.0",
    "fonteditor-core": "2.1.8",
    "gulp-postcss": "9.0.1",
    "gulp-purgecss": "4.1.3",
    "gulp-replace": "1.1.3",
    "gulp-sass": "5.1.0",
    "lint-staged": "^13.0.3",
    "postcss": "8.4.14",
    "postcss-cli": "10.0.0",
    "postcss-sort-media-queries": "4.2.1",
    "sass": "1.53.0",
    "semantic-release": "^19.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.{ts,css,less,scss,js,json,md,yaml}": "npm run format"
  }
}
