{
  "dependencies": {
    "markdown-include": "^0.4.3",
    "markdown-it": "^12.0.4",
    "mustache": "^4.1.0",
    "postcss": "^8.3.0"
  },
  "description": "atlas of information management",
  "devDependencies": {
    "eslint": "^7.17.0",
    "jshint": "^2.12.0",
    "prettier": "^2.3.0",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-prettier": "^1.2.0"
  },
  "eslintConfig": {
  },
  "jshintConfig": {
    "laxbreak": true
  },
  "license": "AGPL-3.0-or-later",
  "name": "atlas",
  "prettier": {
    "printWidth": 99,
    "tabWidth": 2
  },
  "repository": {
    "private": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "ignoreFiles": [
      "*.min.css",
      "lib/*.css"
    ],
    "plugins": [
      "stylelint-prettier"
    ],
    "rules": {
      "prettier/prettier": true,
      "selector-type-no-unknown": [
        true,
        {
          "ignoreTypes": [
            "icon"
          ]
        }
      ]
    }
  }
}
