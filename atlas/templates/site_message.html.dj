{% load markdown %}

{% if site_message and site_message != "" %}
    <div class="notification is-light is-info has-text-centered my-0">{{ site_message|markdown }}</div>
{% endif %}
{% if settings.SITE_MESSAGE %}
    <div class="notification is-light is-link has-text-centered my-0">{{ settings.SITE_MESSAGE|markdown }}</div>
{% endif %}
